<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2">

    <!-- Top Section: Header Image -->
    <RelativeLayout
        android:id="@+id/top_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/navyblue"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#B7FFFFFF"
            android:elevation="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <ImageView
                android:id="@+id/hrtcBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerCrop"
                android:src="@drawable/hospital" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:fontFamily="@font/raleway_semibold"
                android:gravity="center"
                android:letterSpacing="0.025"
                android:text="Register Patient"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/logOutB"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackground"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/hp" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Body Section: Scrollable Content -->
    <LinearLayout
        android:id="@+id/body_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <!--BODY-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!-- PHOTO -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="10dp"
                    android:gravity="center|center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/mainImageView"
                        android:layout_width="200dp"
                        android:layout_height="220dp"
                        android:padding="30dp"
                        android:src="@drawable/camera"
                        android:background="@drawable/customborder_dialog"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:padding="0dp"
                        android:textStyle="bold"
                        android:text="Capture Patient's Photo"
                        android:textColor="@color/hospital_red"
                        android:textSize="18sp" />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="#FFFF"
                    android:elevation="5dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/hospital_red"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:padding="10dp"
                        android:text="Patient Details"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <!--Record Date-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/dateLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:paddingStart="18dp"
                            android:text="Record Date *"
                            android:textAlignment="textStart"
                            android:textColor="@color/darkblue"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/recordDate"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/customborder_dialog"
                            android:focusable="false"
                            android:fontFamily="@font/raleway_semibold"
                            android:gravity="center"
                            android:hint="Select Date"
                            android:textColor="#13914f"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameLabel"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:paddingStart="18dp"
                        android:text="Name of Patient"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp" />


                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/customborder_dialog"
                        android:fontFamily="@font/raleway_semibold"
                        android:hint="Please enter name of Patient"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="#13914f"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Date of Birth -->
                    <TextView
                        android:id="@+id/dobLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:paddingStart="18dp"
                        android:text="Select DOB for Age"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/customborder_dialog"
                        android:focusable="false"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:hint="Select Date"
                        android:textColor="#13914f"
                        android:textSize="14sp" />
                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_marginTop="2dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <!-- Mobile Number Label -->
                    <TextView
                        android:id="@+id/mobileNumberLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:paddingStart="18dp"
                        android:text="Mobile Number"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp" />

                    <!-- Mobile Number Input Field -->
                    <EditText
                        android:id="@+id/mobileNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/customborder_dialog"
                        android:digits="0123456789"
                        android:fontFamily="@font/raleway_semibold"
                        android:hint="Enter Mobile Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="8dp"
                        android:singleLine="true"
                        android:textColor="#13914f"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/genderLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:paddingStart="18dp"
                        android:text="Select Gender"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp" />

                    <com.doi.spinnersearchable.SearchableSpinner
                        android:id="@+id/genderSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/customborder_dialog"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="#13914f"
                        android:textSize="14sp"
                        app:hintText="Please Select Gender" />
                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/hospital_red"
                    android:fontFamily="@font/raleway_semibold"
                    android:gravity="center|center_vertical|center_horizontal"
                    android:padding="10dp"
                    android:text="Test Details"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/testNameLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:paddingStart="18dp"
                        android:text="Please Select Test Name"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp" />

                    <com.doi.spinnersearchable.SearchableSpinner
                        android:id="@+id/nameOfTestSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/customborder_dialog"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="#13914f"
                        android:textSize="14sp"
                        app:hintText="Please Select Test Name" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/referredByLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:paddingStart="18dp"
                        android:text="Referred By:"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp" />

                    <com.doi.spinnersearchable.SearchableSpinner
                        android:id="@+id/referredBySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/customborder_dialog"
                        android:fontFamily="@font/raleway_semibold"
                        android:textColor="#13914f"
                        android:textSize="14sp"
                        app:hintText="Please Select a Test Name" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/amountLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="5dp"
                        android:paddingStart="18dp"
                        android:text="Amount Due:"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/amount"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/customborder_dialog"
                        android:fontFamily="@font/raleway_semibold"
                        android:gravity="center"
                        android:inputType="number"
                        android:hint="Amount Due"
                        android:maxLength="10"
                        android:textColor="#13914f"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/shopLL"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="3dp"
                    android:layout_marginTop="2dp"
                    android:background="#fff"
                    android:elevation="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/paymentTypeLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:paddingStart="18dp"
                        android:text="Payment Type:"
                        android:textAlignment="textStart"
                        android:textColor="@color/darkblue"
                        android:textSize="14sp" />

                    <RadioGroup
                        android:id="@+id/paymentRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RadioButton
                            android:id="@+id/onlineRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Online"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/offlineRadioButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="Offline"
                            android:textSize="16sp" />

                    </RadioGroup>

                    <LinearLayout
                        android:id="@+id/receiptNoLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:layout_marginTop="2dp"
                        android:background="#fff"
                        android:elevation="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/receiptNumberLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:paddingStart="18dp"
                            android:text="Receipt Number"
                            android:textAlignment="textStart"
                            android:textColor="@color/darkblue"
                            android:textSize="14sp" />

                        <EditText
                            android:id="@+id/receiptNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:background="@drawable/customborder_dialog"
                            android:fontFamily="@font/raleway_semibold"
                            android:hint="Enter Receipt Number"
                            android:padding="8dp"
                            android:singleLine="true"
                            android:textColor="#13914f"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <!-- Bottom Section: Buttons -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.2"
        android:background="#FFFF"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/backBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/customborder_dialog_red"
            android:text="Back"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/customborder_dialog_green"
            android:text="Proceed"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>
