<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="#fff"
    android:elevation="4dp"
    android:orientation="horizontal"
    android:padding="5dip"
    android:weightSum="3">


    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dip"
        android:layout_weight="0.2"
        android:background="@drawable/custom_dialog_border_round2"
        android:gravity="center|center_horizontal|center_vertical"
        android:padding="2dp">


        <ImageView
            android:id="@+id/imageViewTests"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:padding="6dp"
            android:layout_gravity="top"
            android:layout_margin="3dp"
            android:src="@drawable/medical_test" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:layout_weight="2.8"
        android:orientation="vertical"
        android:padding="3dip">

        <TextView
            android:id="@+id/head_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Test Name"
            android:textColor="@color/blue"
            android:textSize="18dip"
            android:textStyle="bold"
            android:typeface="sans" />


        <TextView
            android:id="@+id/sector"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail"
            android:text="three"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#366988"
            android:textSize="14dip"
            android:visibility="gone" />


        <TextView
            android:id="@+id/second_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail"
            android:text="Second TV"

            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/darkblue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/third_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/thumbnail"
            android:text="Third TV"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/darkblue"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>